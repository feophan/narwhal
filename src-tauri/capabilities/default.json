{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-confirm",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-create",
    "fs:allow-watch",
    "fs:allow-remove",
    "fs:allow-rename",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "**/*" }]
    },
    "store:default"
  ]
}